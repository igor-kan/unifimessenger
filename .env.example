# UnifiMessenger Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Platform Integrations
# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_GUILD_ID=your_discord_guild_id

# Email
EMAIL_USER=your.email@example.com
EMAIL_PASSWORD=your_email_password
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
AI_CROSS_CHANNEL=true
AI_AUTO_RESPOND=false
AI_SYSTEM_PROMPT=You are a helpful assistant for UnifiMessenger

# Audio Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE=rachel
TTS_PROVIDER=elevenlabs

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/unifimessenger.db
# For PostgreSQL:
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=unifimessenger
# DB_USER=postgres
# DB_PASSWORD=your_password

# Security
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d
ENCRYPTION_ENABLED=false
ENCRYPTION_KEY=your-encryption-key
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=5m
LOG_MAX_FILES=5

# Storage
STORAGE_PROVIDER=local
STORAGE_PATH=./data/files
# For AWS S3:
# STORAGE_PROVIDER=s3
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Features
FEATURE_CROSS_CHANNEL=true
FEATURE_VOICE=true
FEATURE_FILES=true
FEATURE_SYNC=true
FEATURE_NOTIFICATIONS=true
FEATURE_SEARCH=true

# GUI Configuration
GUI_ENABLED=true
GUI_PORT=3001
GUI_THEME=auto
GUI_AUTO_LAUNCH=false

# CLI Configuration
CLI_ENABLED=true
CLI_INTERACTIVE=true
CLI_COLORS=true

# Directories
TEMP_DIR=./temp
DATA_DIR=./data
CONFIG_DIR=./config
AUDIO_TEMP_DIR=./temp/audio

# File Upload Limits
AUDIO_MAX_FILE_SIZE=52428800