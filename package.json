{
  "name": "unifimessenger",
  "version": "1.0.0",
  "description": "Universal multi-platform messenger with AI agents, CLI, and GUI support",
  "main": "src/index.js",
  "bin": {
    "unifimessenger": "./bin/cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "cli": "node bin/cli.js",
    "gui": "electron src/gui/main.js",
    "build": "npm run build:gui",
    "build:gui": "electron-builder",
    "test": "jest",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "cross-env ANALYZE=true next build",
    "bundle-analyzer": "@next/bundle-analyzer npm run build",
    "audit:security": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "clean:all": "rm -rf .next out dist node_modules package-lock.json && npm install",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "deploy": "npm run build && npm run export",
    "export": "next export"
  },
  "keywords": [
    "messenger",
    "chat",
    "telegram",
    "slack",
    "discord",
    "whatsapp",
    "ai",
    "cli",
    "gui",
    "electron"
  ],
  "author": "UnifiMessenger Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "ws": "^8.16.0",
    "telegraf": "^4.15.6",
    "@slack/web-api": "^6.10.0",
    "@slack/socket-mode": "^1.3.4",
    "discord.js": "^14.14.1",
    "nodemailer": "^6.9.8",
    "openai": "^4.26.0",
    "whisper-node": "^0.1.2",
    "node-record-lpcm16": "^1.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "moment": "^2.30.1",
    "uuid": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.35.2",
    "config": "^3.3.9",
    "winston": "^3.11.0",
    "puppeteer": "^21.9.0",
    "node-telegram-bot-api": "^0.66.0",
    "elevenlabs": "^0.7.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "styled-components": "^6.1.6",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "concurrently": "^8.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.6.0",
    "css-loader": "^6.9.1",
    "style-loader": "^4.0.0"
  },
  "build": {
    "appId": "com.unifimessenger.app",
    "productName": "UnifiMessenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unifimessenger/unifimessenger.git"
  },
  "bugs": {
    "url": "https://github.com/unifimessenger/unifimessenger/issues"
  },
  "homepage": "https://github.com/unifimessenger/unifimessenger#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}